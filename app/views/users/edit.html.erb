<% if @user.errors.any? %>
  <div>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  <div>
<% end %>

<%= form_with model: @user, url: user_path, method: :patch, local: true do |form|%>
  <%= form.label :username, "Your name here:" %>
  <%= form.text_field :username, value: @user.username, label: "Y"%>
  <%= form.label :email, "Email:"%>
  <%= form.text_field :email, value: @user.email %>
  <%= form.label :password, "Password:"%>
  <%= form.password_field :password %>
  <%= form.submit "Submit"%>
<% end %>